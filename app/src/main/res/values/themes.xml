<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PokeDex" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>
    
    <style name="TextAppearance.AppCompat.Regular" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/regular</item>
        <item name="android:includeFontPadding">false</item>
    </style>
    <style name="TextAppearance.AppCompat.Bold" parent="Widget.AppCompat.TextView">
        <item name="fontFamily">@font/bold</item>
    </style>
</resources>