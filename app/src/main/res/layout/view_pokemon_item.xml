<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="@drawable/bg_card"
    app:cardCornerRadius="8dp"
    app:cardElevation="@null">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_poke_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginHorizontal="8dp"
            android:gravity="end"
            android:lineHeight="12sp"
            android:textSize="8sp"
            style="@style/TextAppearance.AppCompat.Regular"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="#001"/>
        <ImageView
            android:id="@+id/iv_pokemon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="24dp"
            android:contentDescription="@string/pokemon"
            app:layout_constraintTop_toBottomOf="@id/tv_poke_number"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <View
            android:id="@+id/view_name"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:background="#74CB48"
            app:layout_constraintStart_toStartOf="@id/iv_pokemon"
            app:layout_constraintEnd_toEndOf="@id/iv_pokemon"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_poke_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:lineHeight="16sp"
            android:textColor="@color/white"
            style="@style/TextAppearance.AppCompat.Regular"
            app:layout_constraintTop_toTopOf="@id/view_name"
            app:layout_constraintBottom_toBottomOf="@id/view_name"
            app:layout_constraintStart_toStartOf="@id/view_name"
            app:layout_constraintEnd_toEndOf="@id/view_name"
            tools:text="Bulbasaur"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>